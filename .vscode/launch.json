{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/index.ts", // Ajuste para o seu arquivo principal
        "preLaunchTask": "tsc build", // Referencia a tarefa criada em tasks.json
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }
  