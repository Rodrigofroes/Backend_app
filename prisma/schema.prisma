generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String           @id @map("usu_id")
  name      String           @map("usu_nome")
  email     String           @unique @map("usu_email")
  password  String           @map("usu_senha")
  createdAt DateTime         @default(now()) @map("usu_data_criacao")
  contas    ContaPagar[] 

  @@map("tb_users")
}

model ContaPagar {
  id             String   @id @map("pag_id")
  dataVencimento DateTime   @map("pag_data_vencimento")
  valor          Float    @map("pag_valor")
  status         String   @map("pag_status")
  despesa        String   @map("pag_despesa")
  usuario        User     @relation(fields: [usuarioId], references: [id]) 
  usuarioId      String   @map("pag_usuario") 
  createdAt      DateTime @default(now()) @map("pag_data_criacao")

  @@map("tb_conta_pagar")
}
